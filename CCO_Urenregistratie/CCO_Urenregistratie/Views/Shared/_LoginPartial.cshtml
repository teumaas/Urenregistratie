@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()
    
    <nav class="navbar navbar-fixed-top navbar-cco animated fadeIn" role="navigation">
        <div class="container-fluid">
            <div class="navbar-header">
                <span class="navbar-brand logo"></span>
                @Html.ActionLink("Professionele ICT diensten", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div id="bs-example-navbar-collapse-3" class="collapse navbar-collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li>
                        @Html.ActionLink("Welkom, " + User.Identity.GetUserName(), "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
                    </li>

                    <li>
                        <a class="fa fa-user">Welkom, John Doe</a>
                    </li>
                    <li>
                        <a href="javascript:document.getElementById('logoutForm').submit()"><span class="fa fa-sign-out"></span> Uitloggen</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    }
}
else
{

}
