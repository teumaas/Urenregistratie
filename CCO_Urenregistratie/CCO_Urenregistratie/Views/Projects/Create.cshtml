@model CCO_Urenregistratie.Models.Project

@{
    ViewBag.Title = "Create";
}
@using (Html.BeginForm("Create", "Projects", FormMethod.Post, new { role = "form" }))
{
    @Html.AntiForgeryToken()

    <div class="col-sm-offset-2 col-sm-8 box animated fadeIn">
        <div class="panel panel-cco">
            <div class="panel-heading">
                <h3 class="panel-title">Project toevoegen</h3>
            </div>
            <div class="panel-body">
                <div class="col-sm-12">
                    <div class="col-sm-12">
                        <div class="input-group form-search">
                            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control search-query form-cco", @placeholder = "Project naam" } })
                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger", @hidden = "true", @id = "1" })
                            <span class="input-group-btn">
                                <button class="btn btn-cco" value="create" type="submit" data-type="last" id="submit"><span class="fa fa-plus" /></button>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script type="text/javascript">
    $(document).ready(function () {
        $("#submit").ready(function () {
            $("#submit").click();
            $("#submit").click(function () {
                if ($("#1").hasClass("field-validation-error")) {
                    toastr.error($("#1").children("span").text());
                }
            });
        });
    });
    </script>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

