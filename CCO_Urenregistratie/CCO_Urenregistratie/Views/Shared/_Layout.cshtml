<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    @if (User.Identity.IsAuthenticated)
    { 
    <nav class="navbar navbar-fixed-top navbar-cco animated fadeIn" role="navigation">
        <div class="container-fluid">
            <div class="navbar-header">
                <span class="navbar-brand logo"></span>
                @Html.ActionLink("Professionele ICT diensten", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div id="bs-example-navbar-collapse-3" class="collapse navbar-collapse">
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </nav>
    }
    <div class="container">
        @RenderBody()
    </div>

    <footer class="footer">
        <div class="container">
            <p class="text-muted text-center">© @DateTime.Now.Year CCO Automatisering All Rights Reserved.</p>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/icheck")
    @Scripts.Render("~/bundles/chart")
    @Scripts.Render("~/bundles/selector")
    @Scripts.Render("~/bundles/sweetalert2")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
