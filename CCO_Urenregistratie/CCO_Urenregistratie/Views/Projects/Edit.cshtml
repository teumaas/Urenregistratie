@model CCO_Urenregistratie.Models.Project

@{
    ViewBag.Title = "Edit";
}

@using (Html.BeginForm("Edit", "Projects", FormMethod.Post, new { role = "form" }))
{
    @Html.AntiForgeryToken()

    <div class="modal fade" id="@Html.DisplayFor(model => model.Id)" tabindex="-1" role="dialog" aria-labelledby="@Html.DisplayFor(model => model.Id)">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="panel panel-cco">
                    <div class="panel-heading">
                        <h2 class="panel-title">@Html.DisplayFor(model => Model.Name) - Bewerken <span class="fa fa-close pull-right" data-dismiss="modal" aria-hidden="true" /></h2>
                    </div>
                    <div class="panel-body">

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.Id)

                        <div class="form-group">
                            <div class="input-group">
                                <span class="info-cco input-group-addon"><i class="fa fa-pencil-square-o"></i></span>
                                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control form-cco" } })
                                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="input-group">
                                <span class="info-cco input-group-addon"><i class="fa fa-pencil-square-o"></i></span>
                                @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control form-cco", style = "resize:none" } })
                                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <button type="submit" class="btn btn-cco" role="button">
                            <span class="fa fa-floppy-o"></span> Wijzig
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
